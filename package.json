    "@typescript-eslint/parser": "^8.42.0",
    "@vitest/coverage-v8": "^3.2.4",
    "axe-core": "^4.10.3",
    "eslint": "^9",
    "husky": "^9.1.7",
    "jsdom": "^27.0.0",
    "lint-staged": "^16.2.0",
    "tailwindcss": "^4",
    "typescript": "^5",
    "vitest": "^3.2.4"
  },
  "engines": {
    "node": "20.19.x"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "npm run lint -- --fix",
      "bash -lc \"npm run typecheck\""
