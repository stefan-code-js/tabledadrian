    "class-variance-authority": "^0.7.1",
    "framer-motion": "^12.23.16",
    "gsap": "^3.13.0",
    "lucide-react": "^0.543.0",
    "next": "15.5.2",
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "react-hook-form": "^7.62.0",
    "tailwind-merge": "^3.3.1",
    "zod": "^4.1.5"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.10.2",
    "@cloudflare/next-on-pages": "^1.13.16",
